/* pages/news/news-template/news-template.wxss */
.articlelist{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    padding:10rpx;
    padding-bottom: 5rpx;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
  }
  .author-time{
    margin-top: 10rpx;
    margin-bottom: 20rpx
  }
  .author-icon{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    border-radius: 30rpx;
  }
  .author-name{
    margin-left: 20rpx;
  }
  .author-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5rpx;
    font-size: 26rpx;
  }
  .title{
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
    margin-bottom: 10rpx;
  }
  .article-img{
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15rpx;
  }
  .article-text{
    color: #666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
  }